<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Window Action: Legal Cases (main entry point) -->
    <record id="action_legal_case" model="ir.actions.act_window">
        <field name="name">Legal Cases</field>
        <field name="res_model">legal.case</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Root menu for Legal, now linked to the action -->
    <menuitem id="menu_legal_root" name="Legal" action="action_legal_case" sequence="10" />

    <!-- Submenu: Cases -->
    <menuitem id="menu_legal_case"
        name="Cases"
        parent="menu_legal_root"
        action="action_legal_case"
        sequence="20" />

    <!-- Window Action: Legal Hearings -->
    <record id="action_legal_hearing" model="ir.actions.act_window">
        <field name="name">Legal Hearings</field>
        <field name="res_model">legal.hearing</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Submenu: Hearings -->
    <menuitem id="menu_legal_hearing"
        name="Hearings"
        parent="menu_legal_root"
        action="action_legal_hearing"
        sequence="30" />
</odoo>