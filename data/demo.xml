<odoo>
    <!-- Partners: 2 lawyers, 3 clients -->
    <record id="demo_lawyer_1" model="res.partner">
        <field name="name">Lawyer One</field>
        <field name="is_lawyer">1</field>
    </record>
    <record id="demo_lawyer_2" model="res.partner">
        <field name="name">Lawyer Two</field>
        <field name="is_lawyer">1</field>
    </record>
    <record id="demo_client_1" model="res.partner">
        <field name="name">Client Alpha</field>
        <field name="is_client">1</field>
    </record>
    <record id="demo_client_2" model="res.partner">
        <field name="name">Client Beta</field>
        <field name="is_client">1</field>
    </record>
    <record id="demo_client_3" model="res.partner">
        <field name="name">Client Gamma</field>
        <field name="is_client">1</field>
    </record>

    <!-- Cases -->
    <record id="demo_legal_case_1" model="legal.case">
        <field name="client_id" ref="demo_client_1" />
        <field name="responsible_lawyer_id" ref="demo_lawyer_1" />
        <field name="case_type">civil</field>
        <field name="stage">active</field>
        <field name="fixed_fee_amount">500</field>
        <field name="description">Breach of contract</field>
    </record>
    <record id="demo_legal_case_2" model="legal.case">
        <field name="client_id" ref="demo_client_2" />
        <field name="responsible_lawyer_id" ref="demo_lawyer_1" />
        <field name="case_type">criminal</field>
        <field name="stage">intake</field>
        <field name="fixed_fee_amount">800</field>
        <field name="description">Minor offense</field>
    </record>
    <record id="demo_legal_case_3" model="legal.case">
        <field name="client_id" ref="demo_client_3" />
        <field name="responsible_lawyer_id" ref="demo_lawyer_2" />
        <field name="case_type">corporate</field>
        <field name="stage">closed</field>
        <field name="description">Incorporation dispute resolved</field>
    </record>

    <!-- Hearings -->
    <record id="demo_legal_hearing_1" model="legal.hearing">
        <field name="name">Preliminary arguments</field>
        <field name="case_id" ref="demo_legal_case_1" />
        <field name="date_start">2025-09-10 09:00:00</field>
        <field name="date_end">2025-09-10 10:00:00</field>
        <field name="location">Courtroom 1</field>
        <field name="status">planned</field>
    </record>
    <record id="demo_legal_hearing_2" model="legal.hearing">
        <field name="name">Witness hearing</field>
        <field name="case_id" ref="demo_legal_case_1" />
        <field name="date_start">2025-09-15 11:00:00</field>
        <field name="date_end">2025-09-15 12:00:00</field>
        <field name="location">Courtroom 2</field>
        <field name="status">planned</field>
    </record>
    <record id="demo_legal_hearing_3" model="legal.hearing">
        <field name="name">First mention</field>
        <field name="case_id" ref="demo_legal_case_2" />
        <field name="date_start">2025-09-12 10:00:00</field>
        <field name="date_end">2025-09-12 10:30:00</field>
        <field name="location">Courtroom 3</field>
        <field name="status">planned</field>
    </record>

    <!-- Draft fixed-fee invoice for case 1 -->
    <record id="demo_invoice_case_1" model="account.move">
        <field name="move_type">out_invoice</field>
        <field name="partner_id" ref="demo_client_1"/>
        <field name="legal_case_id" ref="demo_legal_case_1"/>
        <field name="invoice_origin">Demo</field>
        <field name="invoice_line_ids" eval="[(0,0,{'name': 'Legal Services','quantity': 1.0, 'price_unit': 500})]"/>
    </record>
</odoo>