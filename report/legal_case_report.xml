<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <report
        id="report_legal_case"
        model="legal.case"
        string="Legal Case Report"
        report_type="qweb-pdf"
        name="legal_case_mgmt.report_legal_case_template"
        file="legal_case_mgmt.report_legal_case_template"
    />

    <template id="report_legal_case_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <h2>Case: <span t-esc="o.name" /></h2>
                <p>Client: <span t-esc="o.client_id.name" /></p>
                <p>Lawyer: <span t-esc="o.lawyer_id.name" /></p>
                <p>Status: <span t-esc="o.state" /></p>
            </t>
        </t>
    </template>
</odoo>