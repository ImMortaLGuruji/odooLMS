<odoo>
    <record id="view_partner_form_legal" model="ir.ui.view">
        <field name="name">res.partner.form.legal</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Legal Info">
                    <group>
                        <field name="is_lawyer" />
                        <field name="is_client" />
                        <!-- updated for Odoo 17+ -->
                        <field name="bar_number"
                            modifiers="{'invisible': [['is_lawyer','=',False]]}" />
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <!-- Add quick filters in Contacts -->
    <record id="view_res_partner_filter_legal" model="ir.ui.view">
        <field name="name">res.partner.search.legal</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter" />
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <filter string="Lawyers" name="lawyers" domain="[('is_lawyer','=',True)]" />
                    <filter string="Clients" name="clients" domain="[('is_client','=',True)]" />
                </xpath>
            </field>
    </record>
</odoo>