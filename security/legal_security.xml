<odoo>
    <record id="group_legal_user" model="res.groups">
        <field name="name">Legal User</field>
        <field name="category_id" ref="base.module_category_hidden" />
    </record>

    <record id="group_legal_manager" model="res.groups">
        <field name="name">Legal Manager</field>
        <field name="category_id" ref="base.module_category_hidden" />
    </record>

    <!-- Record rule: Legal User can see cases where they are responsible lawyer or a member -->
    <record id="rule_legal_case_user" model="ir.rule">
        <field name="name">Legal cases - user own or member</field>
        <field name="model_id" ref="model_legal_case" />
        <field name="domain_force">['|', ('member_ids','in',user.id),
            ('responsible_lawyer_id','=',user.partner_id.id)]</field>
        <field name="groups" eval="[(4, ref('legal_case_mgmt.group_legal_user'))]" />
    </record>

    <!-- Managers see all -->
    <record id="rule_legal_case_manager_all" model="ir.rule">
        <field name="name">Legal cases - manager all</field>
        <field name="model_id" ref="model_legal_case" />
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('legal_case_mgmt.group_legal_manager'))]" />
    </record>
</odoo>